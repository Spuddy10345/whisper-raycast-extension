{
  "name": "whisper-dictation",
  "title": "Whisper Dictation",
  "description": "Speech-to-text using whisper.cpp",
  "icon": "extension-icon.png",
  "author": "finjo",
  "categories": [
    "Productivity",
    "AI"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "dictate",
      "title": "Dictate Text",
      "description": "Convert speech to text using Whisper",
      "mode": "view"
    },
    {
      "title": "Download Whisper Model",
      "name": "download-model",
      "description": "Choose and download a model for transcription",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "whisperExecutable",
      "type": "textfield",
      "required": false,
      "title": "Whisper Executable Path",
      "description": "Path to whisper-cpp main executable",
      "default": "/opt/homebrew/Cellar/whisper-cpp/1.7.5/bin/whisper-cli",
      "placeholder": "/opt/homebrew/Cellar/whisper-cpp/1.7.5/bin/whisper-cli"
    },
    {
      "name": "modelPath",
      "type": "textfield",
      "required": false,
      "title": "Whisper Model Path",
      "description": "Path to Whisper model file (.bin)",
      "placeholder": "/path/to/your/ggml-MODEL.bin"
    },
    {
      "name": "soxExecutablePath",
      "title": "SoX Executable Path",
      "description": "Full path to the 'sox' command-line audio utility.",
      "type": "textfield",
      "required": true, 
      "placeholder": "/opt/homebrew/bin/sox",
      "default": "/opt/homebrew/bin/sox" 
    },
    {
      "description": "Action to perform automatically after transcription completes",
      "title": "Default Action After Transcription",
      "name": "defaultAction",
      "type": "dropdown",
      "data": [
        {
          "title": "Paste Text",
          "value": "paste"
        },
        {
          "title": "Copy to Clipboard",
          "value": "copy"
        },
        {
          "title": "None (Show Options)",
          "value": "none"
        }
      ],
      "required": false,
      "default": "none"
    }
  ],
  "dependencies": {
    "@raycast/api": "1.95.0"
  },
  "devDependencies": {
    "@raycast/utils": "^1.8.0",
    "@types/node": "^18.8.3",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
